// --- Widget UI Components ---

const WidgetHeader = ({ title, isPinned }) => (
  <div className={`flex items-center justify-between px-4 py-3 border-b ${isPinned ? 'bg-blue-900/20 border-blue-500/30' : 'bg-[#1F2937] border-slate-700'}`}>
    <div className="flex items-center space-x-2">
      <span className="text-xs font-bold text-white tracking-wide uppercase">{title}</span>
    </div>
    <div className="flex items-center space-x-2 text-slate-400">
      {isPinned && <Pin size={12} className="text-blue-400 fill-blue-400" />}
      <Maximize2 size={12} className="hover:text-white cursor-pointer" />
    </div>
  </div>
);

const MarketRow = ({ symbol, bid, ask, change }) => (
  <div className="grid grid-cols-12 gap-1 py-2 px-4 border-b border-slate-700/50 hover:bg-slate-800/50 text-[10px] items-center">
    <div className="col-span-4 font-bold text-slate-200">{symbol}</div>
    <div className="col-span-3 text-slate-400 text-right">{bid.toFixed(1)}</div>
    <div className="col-span-3 text-white font-mono text-right">{ask.toFixed(1)}</div>
    <div className={`col-span-2 text-right ${change > 0 ? 'text-emerald-400' : 'text-rose-400'}`}>
      {change}%
    </div>
  </div>
);

// --- New "Numbered" Feature Component (Ref: Metal Radar structure) ---
const NumberedFeature = ({ number, title, description, icon: Icon, linkText, onClick }) => (
  <div className="relative p-8 border border-slate-800 bg-slate-900/50 rounded-2xl hover:bg-slate-800 hover:border-blue-500/30 transition-all duration-300 group">
    <div className="absolute top-6 right-6 text-4xl font-black text-slate-800 group-hover:text-slate-700 transition-colors select-none">
      {number}
    </div>
    <div className="w-12 h-12 bg-blue-600/10 rounded-xl flex items-center justify-center mb-6 text-blue-500 group-hover:scale-110 transition-transform">
      <Icon size={24} />
    </div>
    <h3 className="text-xl font-bold text-white mb-3">{title}</h3>
    <p className="text-slate-400 leading-relaxed mb-6 h-20">{description}</p>
    <button onClick={onClick} className="flex items-center text-sm font-bold text-blue-400 hover:text-blue-300 transition-colors">
      {linkText} <ChevronRight size={16} className="ml-1" />
    </button>
  </div>
);

